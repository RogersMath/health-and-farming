      "Enfant confus ou qui ne se r√©veille pas normalement",
      "Fi√®vre qui dure plus de 24 heures sans am√©lioration",
      "Vomissements et impossibilit√© de garder des liquides"
    ],
    hc3_title: "Grossesse ‚Äî Signes de Danger",
    hc3_intro: "Allez au centre de sant√© imm√©diatement ‚Äî ne tardez pas ‚Äî si une femme enceinte pr√©sente l'un de ces signes :",
    hc3_list: [
      "Saignements abondants du vagin √† tout moment de la grossesse",
      "Maux de t√™te s√©v√®res ou vision trouble (signe d'hypertension dangereuse)",
      "Gonflement du visage et des mains (signe de pr√©√©clampsie)",
      "Le b√©b√© ne bouge plus depuis plus de 12 heures",
      "Perte des eaux avant les contractions du travail",
      "Forte fi√®vre pendant la grossesse",
      "Travail durant plus de 12 heures sans accouchement"
    ],
    hc3_anc: "Consultez le centre de sant√© au moins 4 fois pendant la grossesse ‚Äî m√™me si vous vous sentez bien.",
    hc4_title: "Soins de Base des Plaies",
    hc4_list: [
      "Nettoyez imm√©diatement toute plaie √† l'eau propre courante pendant 5 minutes",
      "Retirez doucement la salet√© ‚Äî ne frottez pas fort",
      "Couvrez avec un tissu propre ou un bandage",
      "Changez le pansement chaque jour",
      "NE mettez PAS de terre, feuilles, fumier ou huile sur une plaie ‚Äî cela provoque l'infection et le t√©tanos"
    ],
    hc4_go_label: "Aller au dispensaire si :",
    hc4_go: [
      "La plaie pr√©sente des tra√Æn√©es rouges qui s'√©tendent ‚Äî c'est une septic√©mie",
      "La plaie provient d'une morsure d'animal ou d'une plaie p√©n√©trante profonde",
      "De la fi√®vre appara√Æt apr√®s la blessure",
      "La plaie pr√©sente du pus ou une mauvaise odeur apr√®s 2 jours"
    ],
    hc5_title: "Croissance de l'Enfant ‚Äî Mesure PB",
    hc5_intro: "Le PB (P√©rim√®tre Brachial) est la m√©thode la plus simple pour savoir si un enfant de 6 mois √† 5 ans est malnutri. Mesurez le bras sup√©rieur avec un ruban ou une ficelle.",
    hc5_colors: [
      "<strong style='color:var(--earth-green)'>VERT (au-dessus de 12,5 cm)</strong> ‚Äî Enfant bien nourri. Continuez la bonne alimentation.",
      "<strong style='color:#CC8800'>JAUNE (11,5‚Äì12,5 cm)</strong> ‚Äî Enfant √† risque. Diversifiez l'alimentation. Ajoutez de la poudre de moringa chaque jour.",
      "<strong style='color:#CC3300'>ROUGE (en dessous de 11,5 cm)</strong> ‚Äî Enfant s√©v√®rement malnutri. Allez au centre de sant√© imm√©diatement."
    ],
    hc5_note: "Mesurez le PB de votre enfant chaque mois. Un enfant qui ne prend pas de poids a besoin d'aide maintenant, pas plus tard."
  }
};


// =====================================================
// FLAT TRANSLATION MAP
// Every [data-k] element gets a unique indexed key.
// Arrays become key_0, key_1, key_2 etc.
// No querySelector ambiguity. No DOM query at update time.
// =====================================================
function buildFlat(lang) {
  const t = window.TRANSLATIONS[lang];
  if (!t) return {};
  const f = {};
  const strKeys = [
    'site_title','site_subtitle','install_text','install_btn','footer_text',
    'tab_duckweed','tab_moringa','tab_water','tab_soil','tab_health',
    'needs_heading','steps_heading','remember_heading',
    'ch1_num','ch1_title','ch1_intro','ch1_s1','ch1_s2','ch1_s3','ch1_s4','ch1_s5','ch1_s6','ch1_s7','ch1_s8',
    'ch2_num','ch2_title','ch2_intro','ch2_sec1','ch2_sec2','ch2_sec3','ch2_warning',
    'ch2_s1','ch2_s2','ch2_s3','ch2_s4','ch2_s5','ch2_s6','ch2_s7','ch2_s8',
    'ch3_num','ch3_title','ch3_intro','ch3_sec1','ch3_sec2','ch3_sec3','ch3_sec4',
    'ch3_b1','ch3_b2','ch3_b3','ch3_sodis1','ch3_sodis2','ch3_sodis3',
    'ch3_cloth1','ch3_cloth2','ch3_cloth_warning','ch3_ors_intro',
    'ors_title','ors_water','ors_sugar','ors_salt','ors_mix','ch3_clinic_warning',
    'ch4_num','ch4_title','ch4_intro','ch4_signs_heading','ch4_sec1','ch4_sec2','ch4_sec3',
    'ch4_s1','ch4_s2','ch4_s3','ch4_s4','ch4_s5','ch4_zai1','ch4_zai2','ch4_zai3','ch4_rot1','ch4_rot2','ch4_rot3',
    'ch5_num','ch5_title','ch5_intro',
    'hc1_title','hc1_intro','hc1_note','hc2_title','hc2_prevent_label','hc2_signs_label',
    'hc3_title','hc3_intro','hc3_anc','hc4_title','hc4_go_label','hc5_title','hc5_intro','hc5_note'
  ];
  strKeys.forEach(k => { if (t[k] !== undefined) f[k] = { text: t[k], html: false }; });

  function fa(prefix, arr) {
    if (!arr) return;
    arr.forEach((v, i) => { f[prefix + i] = { text: v, html: prefix === 'hc5_c' }; });
  }
  fa('ch1_n', t.ch1_needs); fa('ch1_r', t.ch1_remember);
  fa('ch2_n', t.ch2_needs); fa('ch2_r', t.ch2_remember);
  fa('ch3_r', t.ch3_remember);
  fa('ch4_sign', t.ch4_signs); fa('ch4_n', t.ch4_needs); fa('ch4_r', t.ch4_remember);
  fa('hc1_l', t.hc1_list);
  fa('hc2_p', t.hc2_prevent); fa('hc2_s', t.hc2_signs);
  fa('hc3_l', t.hc3_list);
  fa('hc4_l', t.hc4_list); fa('hc4_g', t.hc4_go);
  fa('hc5_c', t.hc5_colors);
  return f;
}

const FLAT = { en: buildFlat('en'), pu: buildFlat('pu'), wo: buildFlat('wo'), fr: buildFlat('fr') };

// Build DOM cache once ‚Äî maps data-k value to array of elements
const ELEMS = {};
document.querySelectorAll('[data-k]').forEach(el => {
  const k = el.dataset.k;
  if (!ELEMS[k]) ELEMS[k] = [];
  ELEMS[k].push(el);
});

// Apply a language pack to the DOM
let currentLang = 'en';
function applyLang(lang) {
  const flat = FLAT[lang];
  if (!flat) return;
  currentLang = lang;
  document.documentElement.lang = (window.TRANSLATIONS[lang] || {}).lang_attr || lang;
  Object.entries(flat).forEach(([k, { text, html }]) => {
    const els = ELEMS[k];
    if (!els) return;
    els.forEach(el => { html ? (el.innerHTML = text) : (el.textContent = text); });
  });
  try { localStorage.setItem('dg-lang', lang); } catch(e) {}
}

// Language buttons
const langBtns = document.querySelectorAll('.lang-btn[data-lang]');
langBtns.forEach(btn => {
  btn.addEventListener('click', () => {
    langBtns.forEach(b => b.setAttribute('aria-pressed', 'false'));
    btn.setAttribute('aria-pressed', 'true');
    applyLang(btn.dataset.lang);
  });
});

// Chapter tabs
const tabs = document.querySelectorAll('.tab-btn[data-ch]');
const chapters = document.querySelectorAll('.chapter');

function showChapter(chId) {
  chapters.forEach(ch => ch.classList.toggle('active', ch.id === 'ch-' + chId));
  tabs.forEach(t => t.setAttribute('aria-selected', t.dataset.ch === chId ? 'true' : 'false'));
  window.scrollTo({ top: 0, behavior: 'smooth' });
}

tabs.forEach(tab => {
  tab.addEventListener('click', () => showChapter(tab.dataset.ch));
  tab.addEventListener('keydown', e => {
    const arr = Array.from(tabs), i = arr.indexOf(tab);
    if (e.key === 'ArrowRight' || e.key === 'ArrowDown') { e.preventDefault(); arr[(i+1)%arr.length].focus(); arr[(i+1)%arr.length].click(); }
    else if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') { e.preventDefault(); arr[(i-1+arr.length)%arr.length].focus(); arr[(i-1+arr.length)%arr.length].click(); }
  });
});

// Large text
const a11yBtn = document.getElementById('a11y-btn');
a11yBtn.addEventListener('click', () => {
  const on = document.body.classList.toggle('big');
  a11yBtn.setAttribute('aria-pressed', on ? 'true' : 'false');
  try { localStorage.setItem('dg-big', on ? '1' : '0'); } catch(e) {}
});

// PWA service worker
if ('serviceWorker' in navigator) { window.addEventListener('load', () => { navigator.serviceWorker.register('sw.js').catch(() => {}); }); }

// Install prompt
let dip = null;
window.addEventListener('beforeinstallprompt', e => {
  e.preventDefault(); dip = e;
  try { if (localStorage.getItem('dg-no-install') === '1') return; } catch(ex) {}
  document.getElementById('install-bar').classList.add('show');
});
document.getElementById('install-do').addEventListener('click', async () => {
  if (!dip) return;
  document.getElementById('install-bar').classList.remove('show');
  await dip.prompt(); dip = null;
});
document.getElementById('install-x').addEventListener('click', () => {
  document.getElementById('install-bar').classList.remove('show');
  try { localStorage.setItem('dg-no-install', '1'); } catch(e) {}
});
window.addEventListener('appinstalled', () => { document.getElementById('install-bar').classList.remove('show'); });

// Online/offline
function syncOnline() { document.body.classList.toggle('offline', !navigator.onLine); }
window.addEventListener('online', syncOnline); window.addEventListener('offline', syncOnline); syncOnline();

// Init: restore saved prefs
(function() {
  let lang = 'en';
  try {
    const s = localStorage.getItem('dg-lang');
    if (s && FLAT[s]) lang = s;
    else if ((navigator.language || '').toLowerCase().startsWith('fr')) lang = 'fr';
  } catch(e) {}
  if (lang !== 'en') {
    const btn = document.querySelector('.lang-btn[data-lang="' + lang + '"]');
    if (btn) { langBtns.forEach(b => b.setAttribute('aria-pressed', 'false')); btn.setAttribute('aria-pressed', 'true'); }
    applyLang(lang);
  }
  try { if (localStorage.getItem('dg-big') === '1') { document.body.classList.add('big'); a11yBtn.setAttribute('aria-pressed', 'true'); } } catch(e) {}
})();
</script>
</body>
</html>